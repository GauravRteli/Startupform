# Ignore node_modules directories (both client and server)
node_modules/
client/node_modules/
server/node_modules/

# Ignore build directories for React client and server
client/build/
server/build/

# Ignore .env files (contains sensitive AWS credentials and other secrets)
.env
client/.env
server/.env

# Ignore logs and debug files
*.log
*.log.*
debug/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore operating system files
.DS_Store
Thumbs.db

# Ignore IDE/editor specific files (VS Code, etc.)
.vscode/
.idea/

# Ignore coverage directory (if using testing tools like Jest)
coverage/

# Ignore package-lock.json and yarn.lock if using yarn (optional)
package-lock.json
yarn.lock

# Ignore Docker-related files if using Docker (optional)
Dockerfile
docker-compose.yml
.dockerignore

# Ignore any AWS-specific files or directories that could contain credentials
.aws-sdk-cache/

# Ignore files related to AWS SAM/CloudFormation (optional)
.aws-sam/
